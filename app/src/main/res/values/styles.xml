<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16dp</item>
    </style>

    <style name="icon.right">
        <item name="android:layout_gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/size_small_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32dp</item>
    </style>



    <style name="text_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.big" parent="text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/size_small_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="vertical_view">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="horizontal_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/size_large_72</item>
    </style>
    <style name="text.boxex">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:enabled">false</item>
    </style>

</resources>
